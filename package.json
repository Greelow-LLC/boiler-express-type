  },
  "scripts": {
    "send-email": "node -e \"require('dotenv').config(); require('./email.js').sendEmails()\"",
    "test": "docker ps -aq | xargs -r docker stop | xargs -r docker rm && docker volume ls -qf dangling=true | xargs -r docker volume rm && docker-compose -f 'docker-compose.yml' up -d && sleep 20 && jest -c ./jest.unit.json --maxWorkers=1",
    "test:coverage": "jest --coverage -c ./jest.unit.json",
    "lint": "eslint . --ext .ts",
    "start": "node build/index.js",
    "start:prod": "NODE_ENV=production && npm run build && npm start",
    "postinstall": "tsc",
    "watch-node": "nodemon build/index.js",
    "watch-ts": "tsc -w ",
    "dev": "NODE_PATH=src tsc-watch --noClear -p ./tsconfig.json --onSuccess \"ts-node src/index.ts\"",
    "build": "rm -rf ./build && ttsc --project ./",
    "typeorm": "NODE_PATH=src typeorm-ts-node-esm -d src/ormconfig",
    "db:start": "docker-compose -f 'docker-compose.yml' up -d",
    "db:stop": "docker kill $(docker ps -q)",
    "db:clean": "docker rm $(docker ps -a -q) && docker volume prune -f",
    "db:start-postgres": "docker compose -f 'docker-compose-postgres.yml' up --detached",
    "db:seed": "NODE_PATH=src npx typeorm-ts-node-esm migration:create src/migrations/seed",
    "db:generate": "npm run typeorm migration:generate src/migrations/migrations && npm run build",
    "db:up": "npm run typeorm migration:run",
    "db:down": "npm run typeorm migration:revert",
    "db:drop": "npm run typeorm schema:drop"
  },
  "engines": {
    "node": "14.16.1"
  },
  "keywords": [],
  "author": "Pablo Bullor",
  "license": "ISC",
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json",
    "env": {
      "jest": true
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
